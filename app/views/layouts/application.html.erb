<!DOCTYPE html>
<html>
  <head>
    <title><%= yield_title %></title>
    <%= stylesheet_link_tag    'application' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id="pagewrap">
      <div class="wrapper">
        <div id="header">
          <div class="hdrl"></div>
          <div class="hdrr"></div>

          <h1><%= link_to('GitBook', root_path) %></h1>
          
          <ul id="nav">
            <% if current_user %>
              <li><%= link_to('My Repositories', repositories_path(current_user.name))%></li>
            <% end %>
          </ul>
          
          <p class="user">
            <em>Project Discussion</em>
          </p>
        </div><!-- #header -->
        
        <% flash.each do |key, msg| %>
          <%= content_tag :div, content_tag(:p, msg), class: "message #{key}" %>
        <% end %>
        
        <%= yield %>
        
        <div id="footer">
          <p class="owner">
            <%= link_to('NoahHendrix.com', 'http://noahhendrix.com') %>
            not affiliated with <%= link_to('GitHub', 'http://github.com') %>
          </p>
          <p class="powered-by">
            powered by <%= link_to 'Celadon Cedar', 'http://devcenter.heroku.com/articles/cedar' %>
          </p>
        </div><!-- #footer -->
        
      </div><!-- .wrapper -->
    </div><!-- #pagewrap -->

  </body>
</html>
