<div class="event repo-activity">
  <h4>
    <%= link_to_user(commit.username) %> commited
    <%= link_to(truncate(commit.commit_id, length: 20), commit.url, title: commit.commit_id) %>
    <%= time_ago_or_exact_date(commit.committed_at) %>
  </h4>
  <p><%= simple_format(commit.message) %></p>
</div>